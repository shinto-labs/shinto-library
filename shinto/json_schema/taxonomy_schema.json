{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "required": ["fields"],
  "properties": {
    "level": { "type": "string" },
    "fields": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["field", "type", "label"],
        "properties": {
          "field": { "type": "string" },
          "type": {
            "type": "string",
            "enum": [
              "text",
              "number",
              "string",
              "categorical",
              "multi_categorical",
              "date-time",
              "object"
            ]
          },
          "label": { "type": "string" },
          "description": { "type": "string" },
          "level": {
            "type": "string",
            "enum": [
              "project",
              "stage"
            ]
          },
          "values": {
            "type": "array",
            "items": {
              "type": "object",
              "required": ["value", "label"],
              "properties": {
                "value": { "type": ["string", "number"] },
                "label": { "type": "string" },
                "rank": { "type": "integer" }
              }
            }
          }
        }
      }
    }
  }
}